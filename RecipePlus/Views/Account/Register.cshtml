@model RecipePlus.ViewModels.RegisterModel

@{
    ViewData["Title"] = "Register";
}

  
<h1 class="autorization__title">REGISTER FOR RecipePlus</h1>


<div class="row justify-content-center">
    <div class="col-md-6 authentiction-form">
        <form asp-action="Register" method="post" class="authentiction-form__context border rounded-lg">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="form-group col">
                    <label asp-for="FirstName" class="control-label">First name</label>
                    <input asp-for="FirstName" name="FirstName" class="form-control" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="form-group col">
                    <label asp-for="LastName" class="control-label">Last name</label>
                    <input asp-for="LastName" name="LastName" class="form-control" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label">Email</label>
                <input asp-for="Email" name="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label">Password</label>
                <input asp-for="Password" type="password" name ="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword" class="control-label">Confirm Password</label>
                <input asp-for="ConfirmPassword" type="password" name="ConfirmPassword" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group form-btn">
                <input type="submit" value="Register" class="btn btn-outline-secondary btn-authentiction justify-content-lg-center"  />
            </div>
        </form>
        <div class="to_login" style="text-align: center">
            Already have login and password?
            <a href="https://localhost:44371/Account/Login">Sign in</a>
        </div>
    </div>
</div>

